<div class="container" style="margin-top:100px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{persona}}!</span>
                <a href="admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n<i class="fas fa-sing-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- Fin fila 1 --}}
    {{!--Fila 2--}}
    <div class="row">
        <div class="col-7" style="margint-top:-9px;">
          <h2>Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa-duotone fa-plus"></i></i>Nuevo</a>
