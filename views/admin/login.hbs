<div class=" container" style="margin:100px; padding:50px;">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">

                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary" style="margin:10px;">Enviar</button>
            </form>
            {{#if error}}
                <p>Usuario o contraseña incorrecta!</p>
            {{/if}}
        </div>
    </div>
</div>
