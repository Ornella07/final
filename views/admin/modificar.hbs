<div class="container" style="margin:50px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4> Modificar novedad</h4>
            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo </label>
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="form-group"><br>
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                            Â¿Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea placeholder="Descripcion" value="{{novedad.descripcion}}" class="form-control"
                        name="descripcion"></textarea>
                </div><br>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>

    </div>
</div>