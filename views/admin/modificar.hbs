<div class="container" style="margin:50px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4> Modificar novedad</h4>
            <form method="post" action="/admin/novedades/modificar">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
                   <label for="">Titulo </label>
                <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control" name="titulo">
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <textarea placeholder="Descripcion" value="{{novedad.descripcion}}" class="form-control" name="descripcion"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <h5>{{message}}</h5>
            {{/if}}
        </div>

    </div>
</div>