<div class="container" style="margin:100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <br>
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>
                </div>
                <br>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="descripcion"></textarea>

                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
           </form>  
           {{#if error}}
                <p>{{message}}</p>    
           {{/if}}   
        </div>
    </div>
</div>